<script>
  import wepy from 'wepy'

  export default class GiftItem extends wepy.component {
    props = {
      index: {
        type: [Number],
      },
      gift: {}
    }

    data = {
    }

    methods = {
      onChange() {
        this.$emit('checkGift', this.index)
      }
    }
  }
</script>
