<style type="less">
  .gift-view {
    padding: 12px 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .gift-img {
    width: 200rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .desc-view {
    margin-top: 10rpx;
    display: flex;
  }

  .selected-img {
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
  }

</style>
